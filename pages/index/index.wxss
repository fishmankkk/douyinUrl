.video-style{
  height: 320rpx;
  width: 180rpx;
  margin-bottom: 20px;
}
.decode-url{
  margin: 30rpx 0;
}
.btn-list{
  display: flex;
  flex-direction: row;
}
.btn-list .tap-btn{
  flex: 1;
}
.btn-list .tap-btn+.tap-btn{
  margin-left: 20rpx;
}
.input-url{
  font-size: 28rpx;
  border: 1px solid #ddd;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.pop-layer{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 999;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
}
.pop-layer .pop-cart{
  width: 620rpx;
  height: 450rpx;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%);
  position: absolute;
  background-color: #fff;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}
.pop-layer .pop-cart .pop-icon image{
  width: 150rpx;
  height: 150rpx;
}
.pop-layer .pop-cart .pop-title{
  font-size: 35rpx;
  color: #333333;
  text-align: center;
  margin-top: 30rpx;
  font-weight: 600;
}
.pop-layer .pop-cart .pop-btn{
  background: #E64340;
  border-radius: 50rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  text-align: center;
  padding: 5rpx 100rpx;
  margin-top: 30rpx;
  margin-bottom: 44rpx;
  display: inline-block;
  box-shadow: 0 5px 7px 0 rgba(206,0,0,0.20);
}
